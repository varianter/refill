---
import SpeakerCard from "../components/SpeakerCard.astro";
import { colorPairs } from "../utils/colors";
---

<section class="speakers">
  <h2>A glimpse of what to expect ⚡</h2>
  <div class="speakers__talks">
    <SpeakerCard
      colorPair={colorPairs.greenLight}
      speakerName="Vera Haye Bjerga"
      talk="Defining your MVP with the “MVP canvas”"
      discipline="Design"
      company="Variant"
    />
    <SpeakerCard
      colorPair={colorPairs.blueLight}
      speakerName="Kristi Strømstad"
      talk="Test side-effects and behaviour, don’t mock them!"
      discipline="Design"
      company="Variant"
    />
    <SpeakerCard
      colorPair={colorPairs.yellow}
      speakerName="Petter Hohle"
      talk="Defining your MVP with the “MVP canvas”"
      discipline="Design"
      company="Variant"
    />
  </div>
</section>

<style>
  .speakers {
    max-width: 1410px;
    margin: auto;

    display: flex;
    flex-direction: column;
    gap: var(--Padding-l);
  }

  .speakers__talks {
    display: flex;
    gap: var(--Padding-s);
    justify-content: space-between;
    flex-wrap: wrap;
  }
</style>
