---
import { Image } from "astro:assets";
import EventInfo from "../components/EventInfo.astro";
import backgroundImg from "../../public/assets/img/hero.jpg";
---

<section class="hero">
  <Image
    class="hero__background_image"
    src={backgroundImg}
    alt=""
    loading="eager"
  />
  <div class="hero__wrapper">
    <div class="grid-item-full">
      <EventInfo />
    </div>
    <h1 class="hero__heading">Refill Stockholm 2025</h1>
    <a class="hero__register" href="/schedule">Schedule â†’</a>
  </div>
</section>

<style>
  .hero {
    padding: 7rem 10rem 4.5rem 3rem;
    min-height: calc(100vh - var(--Padding-rem) * 2);
    box-sizing: border-box;
    position: relative;
  }

  .hero__background_image {
    position: absolute;
    inset: 0;
    z-index: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero__wrapper {
    max-width: 1410px;
    margin: auto;
    display: grid;
    grid-template-areas: "full full" "left right";
    position: relative;
  }

  .grid-item-full {
    grid-area: full;
  }

  .hero__heading {
    color: var(--text-primary);
    grid-area: left;
    max-width: 40rem;
  }

  .hero__register {
    font-size: var(--Font-size-H2);
    min-width: 73px;

    grid-area: right;
    display: flex;
    justify-content: flex-end;
    align-items: flex-end;
  }

  @media (max-width: 1000px) {
    .hero {
      padding: var(--Padding-xxl) 3rem;
    }
    .hero__wrapper {
      display: flex;
      flex-direction: column;
      gap: var(--Padding-xl);
    }

    .hero__heading {
      order: -1;
      max-width: 100%;
    }

    .hero__register {
      align-items: flex-start;
      justify-content: flex-end;
    }
  }

  @media (max-width: 530px) {
    .hero {
      padding: var(--Padding-xl) var(--Padding-s);
    }
    .hero__wrapper {
      gap: var(--Padding-l);
    }
  }
</style>
