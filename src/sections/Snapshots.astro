---
import { Image } from "astro:assets";
import snapshot1 from "../../public/assets/img/snapshot-1.svg";
import snapshot2 from "../../public/assets/img/snapshot-2.svg";
import snapshot3 from "../../public/assets/img/snapshot-3.svg";
import snapshot4 from "../../public/assets/img/snapshot-4.svg";
import snapshot5 from "../../public/assets/img/snapshot-5.svg";
import shockedFace from "../../public/assets/icons/Face-Shock.svg";
---

<section class="snapshots">
  <h2>Snapshots from Refill 2024</h2>
  <div class="snapshots__images">
    <Image src={snapshot1} alt="Audience at refil" />
    <div>
      <Image src={shockedFace} alt="Shocked face illustration" />
      <p>
        We love to learn. New technologies, new methodologies, and new ways to
        see the world.
      </p>
    </div>
    <Image src={snapshot2} alt="People smiling and laughing" />
    <Image src={snapshot3} alt="Two people having a conversation" />
    <Image src={snapshot4} alt="Audience at refil" />
    <Image src={snapshot5} alt="Workshop at refil" />
  </div>
</section>

<style>
  .snapshots {
    max-width: 1408px;
    width: 100%;
    margin: auto;

    display: flex;
    flex-direction: column;
    gap: var(--Padding-m);
  }

  .snapshots__images {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(354px, 1fr));
    grid-template-rows: repeat(2, 1fr);
    grid-column-gap: 1rem;
    grid-row-gap: 1rem;

    & > img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 0.75rem;
    }

    & div {
      background-color: var(--coral-200);
      padding: 2.25rem;
      border-radius: 6rem 6rem 0.375rem 0.375rem;

      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;

      & > img {
        width: 22px;
        height: 26px;
      }

      & > p {
        color: var(--text-primary);
        font-size: var(--Font-size-H3);
      }
    }
  }
</style>
