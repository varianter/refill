<style>
  .stream__heading {
    max-width: 1410px;
    width: 100%;
    margin: auto;
  }

  .content__flex {
    width: 100%;
    max-width: 1410px;
    margin: auto;
  }

  .content__flex p {
    max-width: 600px;
  }
  .content__flex p + p {
    margin-top: 1rem;
  }

  a {
    text-decoration: underline;
  }

  .stream__image {
    width: 100%;
    margin: 3rem 0;
  }
</style>
