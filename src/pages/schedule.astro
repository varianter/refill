---
import Block from "../components/Block.astro";
import Toggle from "../components/Toggle.astro";
import ScheduleLayout from "../layouts/ScheduleLayout.astro";
import { schedule } from "../utils/schedule/schedule";
---

<ScheduleLayout
  title="Schedule | Refill 2025"
  description="Explore the full schedule for Refill 2025, featuring talks, workshops, and networking opportunities hosted by Variant."
  keywords="Refill 2025 schedule, conference schedule, tech conference, workshops, networking, Variant, talks, event schedule"
  image="/assets/img/og-refill.png"
  url="https://www.refillconf.com/schedule"
>
  <div class="schedule__flex">
    <h1 class="schedule__heading">Schedule</h1>
    <Toggle text="Favorites" />
  </div>
  {schedule.map((block) => <Block block={block} />)}
</ScheduleLayout>

<style>
  .schedule__flex {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .schedule__heading {
    font-size: 4.5rem;

    @media (max-width: 1000px) {
      font-size: 3.5rem;
    }

    @media (max-width: 530px) {
      font-size: 2rem;
    }
  }

  .schedule__flex {
    width: 100%;
    max-width: 1410px;
    margin: auto;
  }
</style>
