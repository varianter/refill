---
import Button from "./button/button.astro";
---

<form
  class="newsletter"
  action="https://buttondown.com/api/emails/embed-subscribe/variant"
  method="post"
>
  <input class="email" type="email" name="email" placeholder="E-mail" />
  <Button text="Sign up" buttonType="primary" />
</form>

<style>
  .newsletter {
    background-color: var(--grey-800);
    padding: 0.375rem;
    border-radius: 0.375rem;

    display: flex;
    gap: 0.25rem;
  }

  .email {
    padding: 0.75rem 1.5rem;
    width: 100%;
    border-radius: 1.5rem;
    border: 0.5px solid var(--text-tertiary);
    background: var(--background-primary);

    font-size: 1rem;
    font-family: var(--font-britti);
  }

  button {
    text-wrap: nowrap;
  }
</style>
