---
import { colors } from "../utils/colors";
import Button from "./button/button.astro";
const yellow = colors.yellow;
const textTertiary = colors.text.tertiary;
const backgroundPrimary = colors.background.primary;
---

<form
  class="newsletter"
  action="https://buttondown.com/api/emails/embed-subscribe/pc"
  method="post"
>
  <input class="email" type="email" name="email" placeholder="E-mail" />
  <Button text="Register" buttonType="primary" />
</form>

<style define:vars={{ yellow, textTertiary, backgroundPrimary }}>
  .newsletter {
    background-color: var(--yellow);
    padding: 0.375rem;
    border-radius: 0.375rem;

    display: flex;
    gap: 0.25rem;
  }

  .email {
    padding: 0.75rem 1.5rem;
    width: 100%;
    border-radius: 1.5rem;
    border: 0.5px solid var(--textTertiary);
    background: var(--backgroundPrimary);

    font-size: 1rem;
    font-family: var(--font-britti);
  }
</style>
