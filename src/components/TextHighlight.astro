---
interface Props {
  htmlTag?: keyof HTMLElementTagNameMap;
  type?: "small" | "big" | "clock";
}

const { htmlTag = "span", type = "small" } = Astro.props;
const Tag = htmlTag;
---

<Tag class={type}><slot /></Tag>

<style>
  span {
    background-color: var(--color-yellow);
    padding: 0rem 0.25rem;
    border-radius: 0.375rem;
  }

  :where(.small, .big, .clock) {
    background-color: var(--color-yellow);
    color: var(--text-primary);

    width: fit-content;
    border-radius: 0.375rem;
  }

  .small {
    padding: 0.25rem 0.5rem;

    font-size: 1.25rem;
  }

  .big {
    padding: var(--Padding-s, 0.75rem) var(--Padding-m, 1.5rem);
    font-size: 5.625rem;
    letter-spacing: -0.1125rem;

    @media (max-width: 1000px) {
      font-size: 3.5rem;
    }

    @media (max-width: 530px) {
     font-size: 2.5rem; 
    }
  }

  .clock {
    font-size: var(--Font-size-H2);
    padding: var(--Padding-m, 1.5rem) var(--Padding-s, 0.75rem);

    @media (max-width: 1000px) {
      padding: var(--Padding-m);
    }
  }

  }
</style>
