---
import type { HTMLAttributes } from "astro/types";
import { colors } from "../../utils/colors";

interface Props extends HTMLAttributes<"button"> {
  text: string;
  buttonType: "primary";
}

const backgroundDark = colors.background.dark;
const textPrimaryOnDark = colors.text.primaryOnDark;

const { text, buttonType, ...props } = Astro.props;
---

<button class={buttonType} {...props}>{text}</button>

<style define:vars={{ backgroundDark, textPrimaryOnDark }}>
  .primary {
    border: none;

    background-color: var(--backgroundDark);
    border-radius: 0.375rem;
    color: var(--textPrimaryOnDark);

    padding: 0.625rem 0.75rem;

    font-family: var(--font-britti);
    font-size: 1.25rem;

    display: flex;
    align-items: center;
    gap: 0.375rem;

    &::after {
      display: inline-block;
      -webkit-mask: url("/assets/incons/arrowRight.svg") no-repeat center;
      -webkit-mask-size: cover;
      mask: url("/assets/icons/arrowRight.svg") no-repeat center;
      mask-size: cover;

      width: 24px;
      height: 24px;
      content: "";

      background-color: white;
    }
  }
</style>
