---
interface Props {
  linkText: string;
  href: string;
  target?: string;
}

const { linkText, href, target } = Astro.props;
---

<div class="practical_details_link_block">
  <slot />
  <a href={href} target={target}>{linkText}</a>
</div>

<style>
  .practical_details_link_block {
    display: flex;
    flex-direction: column;
    gap: var(--Padding-s);

    > a {
      display: flex;
      padding: 0.375rem 0.5rem;
      gap: 0.25rem;
      border-radius: 0.375rem;
      color: var(--text-primary-on-dark);
      background-color: var(--background-dark);
      width: fit-content;
      transition: background-color 0.4s;
    }
    /* TODO: Add hover and active on button */
  }
</style>
