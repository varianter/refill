---
import type { ColorPair } from "../utils/colors";
import TiltedTag from "./TiltedTag.astro";

interface Props {
  track: string;
  colorPair: ColorPair;
}

const { track, colorPair } = Astro.props;

const color = colorPair.color;
const textColor = colorPair.textColor;
---

<div class="talk">
  <TiltedTag colorPair={colorPair}>{track}</TiltedTag>
  <div class="talk__content">
    <p>
      <slot />
    </p>
  </div>
</div>

<style define:vars={{ color, textColor }}>
  .talk {
    max-width: 424px;
  }
  .talk__content {
    background-color: var(--color);
    padding: 1rem var(--Padding-s);
    border-radius: 0.375rem;

    & p {
      color: var(--textColor);
      font-size: var(--Font-size-H2);
    }
  }
</style>
