---
interface Props {
  type: "curl" | "smiley";
}

const { type } = Astro.props;
---

{
  type === "curl" && (
    <img
      class="curl"
      src="/assets/img/divider/curly.svg"
      alt="curly illustration"
    />
  )
}

{
  type === "smiley" && (
    <img
      class="smiley"
      src="/assets/img/divider/smiley.svg"
      alt="curly illustration"
    />
  )
}

<style>
  .curl {
    max-height: 300px;
    object-fit: cover;
  }

  .smiley {
    width: 290px;
    height: auto;
    margin: auto;
  }
</style>
