---
import { Image } from "astro:assets";
import curl from "../../../public/assets/img/divider/curly.jpg";
import curlBlue from "../../../public/assets/img/divider/curly-blue.jpg";
import smiley from "../../../public/assets/img/divider/smiley.png";

interface Props {
  type: "curl" | "smiley" | "curlBlue";
}

const { type } = Astro.props;
---

{type === "curl" && <Image class="curl" src={curl} alt="curly illustration" />}

{
  type === "curlBlue" && (
    <Image class="curl" src={curlBlue} alt="curly illustration" />
  )
}

{
  type === "smiley" && (
    <Image class="smiley" src={smiley} alt="curly illustration" />
  )
}

<style>
  .curl {
    width: 100%;
    height: auto;
    max-height: 300px;
    object-fit: cover;
  }

  .smiley {
    width: 290px;
    height: auto;
    margin: auto;
  }
</style>
