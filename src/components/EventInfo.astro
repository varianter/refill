---
import Clock from "./Clock.vue";
import TextHighlight from "./TextHighlight.astro";

const date = new Date(2025, 3, 4);
---

<div class="event_info">
  <div class="event_info__text">
    <div class="event_info__text__first">
      <TextHighlight htmlTag="p" type="small">7A Posthuset</TextHighlight>
      <TextHighlight htmlTag="p" type="big">4. april</TextHighlight>
    </div>
    <TextHighlight htmlTag="p" type="big">Build for impact</TextHighlight>
  </div>

  <div class="event_info__time">
    <div class="event_info__clock">
      <TextHighlight htmlTag="p" type="clock"
        ><Clock targetTime={date} format="days" /></TextHighlight
      >
      <p>days</p>
    </div>
    <div class="event_info__clock">
      <TextHighlight htmlTag="p" type="clock"
        ><Clock targetTime={date} format="hours" /></TextHighlight
      >
      <p>hours</p>
    </div>
  </div>

  <style>
    :root {
      --small-gap: 0.5rem;
      --clock-gap: 0.75rem;

      @media (max-width: 1000px) {
        --small-gap: 0.25rem;
      }
    }
    :where(
      .event_info,
      .event_info__text,
      .event_info__text__first,
      .event_info__time,
      .event_info__clock
    ) {
      display: flex;
      flex-direction: column;
    }

    .event_info {
      gap: var(--Padding-m);
      align-items: flex-end;
    }

    .event_info__text {
      gap: var(--small-gap);
      align-items: flex-end;
    }

    .event_info__text__first {
      gap: var(--small-gap);
    }

    .event_info__time {
      flex-direction: row;
      gap: 0.25rem;
    }

    .event_info__clock {
      gap: 0.75rem;
      align-items: center;

      & > p {
        font-size: 2rem;
        color: var(--text-primary);
      }
    }
  </style>
</div>
