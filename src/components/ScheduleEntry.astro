---
import { colors } from "../utils/colors";
import { getColumn } from "../utils/getColumm";
import { FavoriteButton } from "./button/favoriteButton/FavoriteButton";
import CardWrapper from "./CardWrapper.astro";
import Discipline from "./Discipline.astro";
import Talk from "./Talk.astro";
import { type Talk as TalkEvent, type CommonEvent } from "../utils/schedule";
import { getDisciplineColorPair, getDisciplineName } from "../utils/discipline";

interface Props {
  event: TalkEvent | CommonEvent;
  span: number;
}

const { event, span } = Astro.props;

const formattedNames = event.speaker
  ? event.speaker.split(" & ").map((name) => name.split(" ").join("-"))
  : undefined;

const colorPair =
  event.type === "talk" ? getDisciplineColorPair(event.discipline) : undefined;

const borderColor =
  colorPair?.color === colors.teal100 ? colors.tealDark : colorPair?.color;

const column = event.location ? getColumn(event.location) : "unset";

const timeAndLocation = `${event.location} ${event.from}-${event.to}`;
---

<CardWrapper
  id={event.id}
  borderColor={borderColor ? borderColor : colors.text.primary}
  span={span}
  column={column}
>
  <div class="speaker_card__wrapper">
    <div class="speaker_card__img_flex">
      {
        formattedNames &&
          formattedNames.map((name) => {
            //TODO: Get img from chewbacca
            // const imgSrc = `/assets/img/people/${name}.jpg`;
            // const altText = name.replaceAll("-", " ");
            const imgSrc = "";
            return (
              <img class="speaker_card__speaker_img" />
              // <img class="speaker_card__speaker_img" src={imgSrc} alt="" />
            );
          })
      }
    </div>
    <Talk speakerName={event.speaker} title={event.title} />
    <div class="speaker_card__flex">
      <div class="speaker_card__flex__labels">
        <Discipline>{timeAndLocation}</Discipline>
        {
          event.type === "talk" && (
            <Discipline colorPair={colorPair}>
              {getDisciplineName(event.discipline)}
            </Discipline>
          )
        }
      </div>
      <FavoriteButton client:load id={event.id} talkTitle={event.title} />
    </div>
  </div>
</CardWrapper>

<style is:global>
  .speaker_card__wrapper {
    display: grid;
    grid-template-areas:
      "img"
      "location";
    gap: var(--Padding-m);

    container-type: inline-size;
    container-name: cardContent;
  }

  .speaker_card__wrapper:not(:has(.speaker_card__speaker_img)) .talk__text {
    background-color: var(--background-dark);
    color: var(--text-primary-on-dark);
  }

  .speaker_card__wrapper:not(:has(.speaker_card__speaker_img)) .talk {
    max-width: 100%;
  }

  .talk {
    grid-area: img;
    align-self: end;
  }

  .speaker_card__speaker_img {
    overflow: hidden;
    width: 100%;
    aspect-ratio: 1/1;
    object-fit: cover;
  }

  .speaker_card__img_flex {
    grid-area: img;
    justify-self: end;
    display: flex;

    max-width: 338px;
  }

  .speaker_card__flex {
    grid-area: location;
    display: flex;
    height: fit-content;
    align-items: end;
    justify-content: space-between;
  }

  .speaker_card__flex__labels {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
  }

  @container (width > 650px) {
    .speaker_card__wrapper:has(img) .talk__text {
      font-size: var(--Font-size-H2);
    }

    .speaker_card__wrapper:has(img) .talk {
      max-width: 650px;
    }
  }

  @container (width < 650px) {
    .speaker_card__wrapper:has(img) .talk {
      max-width: 285px;
    }
  }
</style>
