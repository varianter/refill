---
import type { Column } from "../utils/getColumm";

interface Props {
  id: string;
  borderColor: string;
  span: number;
  column: Column;
}

const { id, borderColor, span, column } = Astro.props;
---

<div id=`card${id}` class="card_wrapper">
  <slot />
</div>

<style is:global define:vars={{ span, column, borderColor }}>
  .card_wrapper,
  .card_wrapper__hidden {
    border: 2px solid var(--borderColor);
    padding: var(--Padding-m);
    border-radius: 0.375rem;
    opacity: 1;
    height: 100%;
    box-sizing: border-box;
    box-shadow:
      0.6px 0.7px 2.2px rgba(0, 0, 0, 0.024),
      1.4px 1.7px 5.3px rgba(0, 0, 0, 0.032),
      2.6px 3.1px 10px rgba(0, 0, 0, 0.038),
      4.7px 5.6px 17.9px rgba(0, 0, 0, 0.044),
      8.8px 10.4px 33.4px rgba(0, 0, 0, 0.053),
      21px 25px 80px rgba(0, 0, 0, 0.07);

    display: flex;
    flex-direction: column;
    justify-content: end;
  }

  .card_wrapper {
    opacity: 1;
    position: relative;
    z-index: 1;
    transition: all 0.4s;
    position: relative;
    grid-row: span var(--span);
    grid-column: var(--column);

    @media (max-width: 1300px) {
      grid-column: unset;
      grid-row: unset;
    }
  }

  .card_wrapper__hidden {
    opacity: 0;
    position: absolute;
    z-index: 0;
    width: fit-content;
    box-sizing: border-box;
  }
</style>
